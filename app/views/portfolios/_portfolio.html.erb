<div class="column">
<div class="content">
    <p id="portfolio-<%= portfolio.id %>">
      <%= link_to gravatar_for(portfolio.user, size: 50), portfolio.user %>
      <span class="title"><%= portfolio.title %></span>
      <span class="content"><%= portfolio.content %></span>
      <span class="timestamp">
        Posted <%= time_ago_in_words(portfolio.created_at) %> ago.
      </span>
    </p>
</div>
</div>
